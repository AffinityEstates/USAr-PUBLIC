<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AffinityPublicMauiApp.Pages.RecordDetailPage"
             Title="Record Detail Page"
             xmlns:vm="clr-namespace:AffinityPublicMauiApp.Models.ViewModels"
             x:DataType="vm:UserDetailViewModel"
             >
    <TableView Intent="Data">
        <TableRoot>
            <TableSection Title="Affinity App Information">
                <TextCell Text="Welcome to Affinity! Enter your info to join notifications" />
                <TextCell Text="Email" Detail="{Binding UserEmail}"/>
                <TextCell Text="Name" Detail="{Binding UserName}" />
                <SwitchCell Text="Can Email?" On="{Binding CanEmail}"/>
                <ImageCell Text="Drone Projects" Detail="Check out Affinity Drone Projects" ImageSource="IndyDrone.jpg" />
                <ImageCell Text="VR Projects" Detail="Check out Affinity VR Projects" ImageSource="vrimage.jpg" />

            </TableSection>
            
        </TableRoot>
    </TableView>
</ContentPage>