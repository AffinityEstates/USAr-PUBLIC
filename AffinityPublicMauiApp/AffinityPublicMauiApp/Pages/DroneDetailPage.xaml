<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AffinityPublicMauiApp.Pages.DroneDetailPage"
             xmlns:vm="clr-namespace:AffinityPublicMauiApp.Models.ViewModels"
             x:DataType="vm:DroneDetailVM"
             Title="DroneDetailPage">

    <!-- xmlns:vm="clr-namespace:AffinityPublicMauiApp.Models.ViewModels"
x:DataType="vm:MainPageViewModel"-->
    <VerticalStackLayout>
        <Label 
            Text="Affinity Drone Projects!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CarouselView IndicatorView="droneIndicatorView">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Drone1</x:String>
                    <x:String>Drone2</x:String>
                    <x:String>Drone3</x:String>                    
                </x:Array>
            </CarouselView.ItemsSource>
        </CarouselView>
        <!-- Review these:
        
        https://learn.microsoft.com/en-us/dotnet/maui/user-interface/controls/carouselview/populate-data?view=net-maui-8.0
        https://www.youtube.com/watch?v=kw9-_GLruUg
        
        -->
        <IndicatorView x:Name="droneIndicatorView" Margin="5">
            
        </IndicatorView>
            
    </VerticalStackLayout>
</ContentPage>